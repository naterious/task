    "@types/csvtojson": "^1.1.5",
    "@types/debug": "^0.0.31",
    "@types/es6-error": "^4.0.2",
    "@types/express": "^4.16.0",
    "@types/joi": "^14.0.1",
    "@types/json2csv": "^4.2.0",
    "@types/jsonwebtoken": "^8.3.0",
    "@types/mocha": "^5.2.5",
    "@types/mock-require": "^2.0.0",
    "@types/multer": "^1.3.7",
