    "ramda-fantasy": "^0.8.0",
    "request-promise": "^4.2.4",
    "swagger-ui-express": "^3.0.9",
    "ts-node": "^7.0.1",
    "ulid": "^2.3.0",
    "uuid": "^3.3.2",
    "winston": "^2.4.2",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/node": "^7.2.2",
    "@babel/plugin-external-helpers": "^7.2.0",
    "@babel/plugin-proposal-class-properties": "^7.2.3",
