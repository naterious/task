    "mocha": "^5.1.1",
    "mock-require": "^2.0.2",
    "nodemon": "^1.11.0",
    "npm-package-json-lint": "^2.11.0",
    "npm-package-json-lint-config-default": "^1.1.0",
    "nyc": "^11.7.3",
    "remark-cli": "^4.0.0",
    "remark-lint": "^6.0.1",
    "remark-lint-code-block-style": "^1.0.1",
    "remark-lint-first-heading-level": "^1.1.1",
