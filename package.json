  "eslintConfig": {
    "env": {
      "mocha": true,
      "node": true
    }
  },
  "typeCoverage": {
    "atLeast": 90,
    "detail": true
  },
  "nyc": {
    "exclude": [
      "__tests__"
    ],
    "reporter": [
      "html"
    ],
    "require": [
      "@babel/register"
    ],
    "sourceMap": false,
    "instrument": false
  }
}
